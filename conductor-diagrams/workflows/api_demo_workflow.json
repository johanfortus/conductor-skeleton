{
  "name": "api_demo_workflow",
  "description": "Demo: worker POST -> HTTP GET -> worker summary",
  "version": 1,
  "schemaVersion": 2,
  "inputParameters": ["username"],
  "tasks": [
    {
      "name": "api_create_user_task",
      "taskReferenceName": "create_user_ref",
      "type": "SIMPLE",
      "inputParameters": {
        "username": "${workflow.input.username}"
      }
    },
    {
      "name": "http_get_users_ref",
      "taskReferenceName": "http_get_users_ref",
      "type": "HTTP",
      "inputParameters": {
        "http_request": {
          "method": "GET",
          "uri": "http://host.docker.internal:5000/api/users",
          "headers": {
            "Accept": "application/json"
          }
        }
      }
    },
    {
      "name": "print_summary_task",
      "taskReferenceName": "summary_ref",
      "type": "SIMPLE",
      "inputParameters": {
        "created_user": "${create_user_ref.output.created_user}",
        "users_http_response": "${http_get_users_ref.output.response}"
      }
    }
  ],
  "outputParameters": {
    "created_user": "${summary_ref.output.created_user}",
    "total_users": "${summary_ref.output.total_users}",
    "users": "${summary_ref.output.raw_users_body}"
  }
}