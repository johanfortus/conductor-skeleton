{
  "name": "api_http_only_workflow",
  "description": "Pure Conductor HTTP workflow (POST + GET only)",
  "version": 1,
  "schemaVersion": 2,
  "inputParameters": ["username"],
  "tasks": [
    {
      "name": "http_create_user",
      "taskReferenceName": "http_create_user_ref",
      "type": "HTTP",
      "inputParameters": {
        "http_request": {
          "method": "POST",
          "uri": "http://host.docker.internal:5000/api/users",
          "headers": {
            "Content-Type": "application/json",
            "Accept": "application/json"
          },
          "body": {
            "username": "${workflow.input.username}"
          }
        }
      }
    },
    {
      "name": "http_get_users",
      "taskReferenceName": "http_get_users_ref",
      "type": "HTTP",
      "inputParameters": {
        "http_request": {
          "method": "GET",
          "uri": "http://host.docker.internal:5000/api/users",
          "headers": {
            "Accept": "application/json"
          }
        }
      }
    }
  ],
  "outputParameters": {
    "post_status": "${http_create_user_ref.output.response.statusCode}",
    "get_status": "${http_get_users_ref.output.response.statusCode}",
    "created_user": "${http_create_user_ref.output.response.body}",
    "users_after_post": "${http_get_users_ref.output.response.body}"
  }
}